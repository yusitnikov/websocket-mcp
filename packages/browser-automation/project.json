{
  "name": "browser-automation",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/browser-automation/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/browser-automation"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nodemon --exec \"node --import tsx\" packages/browser-automation/bin/mcp-server.ts -- --broker ws://localhost:3004 --stdio"
      }
    }
  },
  "tags": []
}
